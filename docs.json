{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Treeship Documentation",
  "colors": {
    "primary": "#FFCD38",
    "light": "#FFE38C",
    "dark": "#FF4F00"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart",
              "installation"
            ]
          },
          {
            "group": "Zero-Knowledge Proofs",
            "pages": [
              "zk/introduction",
              "zk/attestations",
              "zk/verification"
            ]
          },
          {
            "group": "ZK Commerce",
            "pages": [
              "commerce/overview",
              "commerce/payment-proofs",
              "commerce/compliance"
            ]
          },
          {
            "group": "SDK Reference",
            "pages": [
              "sdk/javascript",
              "sdk/python",
              "sdk/examples"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Authentication",
            "pages": [
              "api-reference/authentication"
            ]
          },
          {
            "group": "Endpoints",
            "pages": [
              "api-reference/agents/create",
              "api-reference/agents/verify",
              "api-reference/proofs/generate",
              "api-reference/attestations/create"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Website",
          "href": "https://www.treeship.dev",
          "icon": "globe"
        },
        {
          "anchor": "GitHub",
          "href": "https://github.com/treeship",
          "icon": "github"
        },
        {
          "anchor": "Discord",
          "href": "https://discord.gg/treeship",
          "icon": "discord"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@treeship.dev"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://www.treeship.dev"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/treeship",
      "github": "https://github.com/treeship",
      "linkedin": "https://linkedin.com/company/treeship"
    }
  },
  "api": {
    "baseUrl": "https://api.treeship.dev/v1",
    "mdx": {
      "auth": {
        "method": "bearer",
        "name": "Authorization"
      }
    },
    "playground": {
      "mode": "simple"
    }
  }
}